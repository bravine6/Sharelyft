<%- include('header'); -%>

<body>
    <%- include('navbar', { activePage: 'contactMessages' }) %>

    <!-- Hero Section -->
    <section class="hero-section text-center py-5">
        <div class="container">
            <h1 class="display-4">User Feedback</h1>
            <p class="lead">Read messages from fellow users and share your thoughts.</p>
        </div>
    </section>

    <section class="container mt-4">
        <div class="card shadow-lg p-4">
            <h2 class="text-center">Feedback Messages</h2>
            <p class="text-center text-muted">See what users are saying</p>
            
            <div class="table-responsive">
                <table class="table table-hover mt-4">
                    <thead class="table-success">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Message</th>
                            <th>Sent At</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (messages.length === 0) { %>
                            <tr>
                                <td colspan="4" class="text-center text-muted">No messages yet.</td>
                            </tr>
                        <% } else { %>
                            <% messages.forEach(msg => { %>
                            <tr>
                                <td><%= msg.name %></td>
                                <td><%= msg.email %></td>
                                <td><%= msg.message %></td>
                                <td><%= msg.createdAt %></td>
                            </tr>
                            <% }); %>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <!-- Button to go to Contact Us page -->
            <div class="text-center mt-4">
                <a href="/contact_us" class="btn btn-success btn-lg">New Feedback</a>
            </div>
        </div>
    </section>

    <%- include('footer'); -%>
</body>
</html>
