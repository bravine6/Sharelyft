<%- include('header') %>

<body>
    <!-- Include the Navbar -->
    <%- include('navbar', { activePage: 'find_ride' }) %>
    <main>
        <!-- SECTION TWO: Header Section -->
        <section class="hero-section py-5 text-center">
            <div class="container">
                <h1 class="display-4">Find a ride</h1>
                <p class="lead">Plan your trip with ease. Find a ride that suits you.</p>
            </div>
        </section>

        <!-- SECTION THREE: Ride Details Form -->
        <section class="find-ride-form my-5">
            <div class="container">
                <h2>Plan Your Trip</h2>
                <form>
                    <div class="mb-3">
                        <label for="leavingFrom" class="form-label">Where are you leaving from?</label>
                        <input type="text" id="leavingFrom" class="form-control" placeholder="Enter departure location" required>
                    </div>
                    <div class="mb-3">
                        <label for="goingTo" class="form-label">Where are you going?</label>
                        <input type="text" id="goingTo" class="form-control" placeholder="Enter destination" required>
                    </div>
                    <div class="mb-3">
                        <label for="travelDate" class="form-label">When would you like to travel?</label>
                        <input type="date" id="travelDate" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Search for Rides</button>
                </form>
            </div>
        </section>

        <!-- SECTION FOUR: Filter Section -->
        <section class="filters my-4">
            <div class="container">
                <h2>Filter Rides</h2>
                <form>
                    <div class="row">
                        <div class="col-md-4">
                            <label for="departureTime">Departure Time</label>
                            <input type="time" id="departureTime" class="form-control">
                        </div>
                        <div class="col-md-4">
                            <label for="priceRange">Price Range</label>
                            <input type="range" id="priceRange" class="form-control" min="10" max="100" step="5">
                        </div>
                        <div class="col-md-4">
                            <label for="seats">Available Seats</label>
                            <input type="number" id="seats" class="form-control" min="1" max="4">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 mt-3">Apply Filters</button>
                </form>
            </div>
        </section>

        <!-- SECTION FIVE: Ride Cards -->
        <section class="ride-cards my-5">
            <div class="container">
                <h2>Available Rides</h2>
                <div class="ride-container">
                    <div class="ride-card">
                        <img src="ride1.jpg" alt="Ride 1">
                        <h3>Melbourne to Sydney</h3>
                        <p><strong>Departure:</strong> Melbourne, 10th January</p>
                        <p><strong>Available Seats:</strong> 3</p>
                        <p><strong>Price:</strong> $50</p>
                        <button class="btn btn-primary w-100">Book Ride</button>
                    </div>
                    <div class="ride-card">
                        <img src="ride2.jpg" alt="Ride 2">
                        <h3>Melbourne to Brisbane</h3>
                        <p><strong>Departure:</strong> Melbourne, 12th January</p>
                        <p><strong>Available Seats:</strong> 2</p>
                        <p><strong>Price:</strong> $70</p>
                        <button class="btn btn-primary w-100">Book Ride</button>
                    </div>
                    <div class="ride-card">
                        <img src="ride3.jpg" alt="Ride 3">
                        <h3>Melbourne to Adelaide</h3>
                        <p><strong>Departure:</strong> Melbourne, 15th January</p>
                        <p><strong>Available Seats:</strong> 1</p>
                        <p><strong>Price:</strong> $60</p>
                        <button class="btn btn-primary w-100">Book Ride</button>
                    </div>
                </div>
            </div>
        </section>

        <!-- SECTION SIX: Ride Alerts -->
        <section class="ride-alerts my-4">
            <div class="container">
                <h2>Sign up for Ride Alerts</h2>
                <form>
                    <div class="mb-3">
                        <label for="alertLocation" class="form-label">Location</label>
                        <input type="text" id="alertLocation" class="form-control" placeholder="Enter location">
                    </div>
                    <div class="mb-3">
                        <label for="alertDate" class="form-label">Preferred Date</label>
                        <input type="date" id="alertDate" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary">Get Alerts</button>
                </form>
            </div>
        </section>
    </main>

    <!-- Include the Footer -->
    <%- include('footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
