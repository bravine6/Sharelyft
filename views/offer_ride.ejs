<%- include('header') %>

<body>
    <%- include('navbar', { activePage: 'offer_ride' }) %>

    <main>
        <section class="hero-section py-5 text-center">
            <div class="container">
                <h1 class="display-4">Offer a Ride</h1>
                <p class="lead">Share your journey and find companions for your travels.</p>
            </div>
        </section>

        <div class="container mt-5">
            <h2>Provide Ride Details</h2>
            <form action="/offer_ride" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="leavingFrom" class="form-label">Where are you leaving from?</label>
                    <input type="text" class="form-control" name="leavingFrom" required>
                </div>

                <div class="mb-3">
                    <label for="goingTo" class="form-label">Where are you going?</label>
                    <input type="text" class="form-control" name="goingTo" required>
                </div>

                <div class="mb-3">
                    <label for="travelDate" class="form-label">Date of travel</label>
                    <input type="date" class="form-control" name="travelDate" required>
                </div>

                <div class="mb-3">
                    <label for="departureTime" class="form-label">Departure Time</label>
                    <input type="time" class="form-control" name="departureTime" required>
                </div>

                <div class="mb-3">
                    <label for="numSeats" class="form-label">Number of seats available</label>
                    <input type="number" class="form-control" name="numSeats" required min="1">
                </div>

                <div class="mb-3">
                    <label for="passengerType" class="form-label">Passenger Preferences</label>
                    <select class="form-select" name="passengerType" required>
                        <option value="all">Any</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Price per seat ($)</label>
                    <input type="number" class="form-control" name="price" required min="0">
                </div>

                <button type="submit" class="btn btn-primary">Submit Ride</button>
            </form>
        </div>
    </main>

    <%- include('footer') %>
</body>
</html>
