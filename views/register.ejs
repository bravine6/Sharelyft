<%- include('header') %>

    <body>
        <!-- Include the Navbar -->
        <%- include('navbar', { activePage: 'register' }) %>

            <!-- Sign Up Form -->
            <section class="form-section mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <h2>New User Registration</h2>
                        <form method="post" action="/register" id="postRegisterForm"
                            onsubmit="return validateForm()">
                            <div class="mb-3">
                                <input type="text" id="firstName" name="firstName" class="form-control"
                                    placeholder="First Name" required>
                                <p id="firstNameMsg" class="msg"></p>
                            </div>
                            <div class="mb-3">
                                <input type="text" id="lastName" name="lastName" class="form-control"
                                    placeholder="Last Name" required>
                                <p id="lastNameMsg" class="msg"></p>
                            </div>
                            <div class="mb-3">
                                <input type="email" id="email" name="email" class="form-control"
                                    placeholder="Email Address" required>
                                <p id="emailMsg" class="msg"></p>
                            </div>
                            <div class="mb-3">
                                <input type="tel" id="phoneNumber" name="phoneNumber" class="form-control"
                                    placeholder="Mobile Number" required>
                                <p id="phoneNumberMsg" class="msg"></p>
                            </div>
                            <div class="mb-3">
                                <input type="password" id="password" name="password" class="form-control"
                                    placeholder="Set Password" required>
                                <p id="passwordMsg" class="msg"></p>
                            </div>
                            <div class="mb-3">
                                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
                                    placeholder="Confirm Password" required>
                                <p id="confirmPasswordMsg" class="msg"></p>
                            </div>
                            <div class="mb-3">
                                <label for="birthday" class="form-label">Date of Birth</label>
                                <input type="date" id="birthday" name="birthday" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="gender" class="form-label">Gender</label>
                                <select id="gender" name="gender" class="form-select" required>
                                    <option value="" disabled selected>Select your gender</option>
                                    <option value="male">Male</option>
                                    <option value="female">Female</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>
                            <p id="genderMsg" class="msg"></p>

                            <div class="row">
                                <div class="col-6">
                                    <input class="btn btn-primary my-3" type="submit" onclick="validateForm()"
                                        value="Sign Up">
                                    <input class="btn btn-secondary my-3" type="button" onclick="resetForm()"
                                        value="Reset">
                                </div>
                            </div>
                        </form>
                        <p class="mt-3 text-center">Already a user? <a href="/login">Log In</a></p>
                    </div>
                </div>
            </section>
            <!-- Include the Footer -->
            <%- include('footer') %>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
                <script src="register.js"></script>
    </body>