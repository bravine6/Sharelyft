<%- include('header') %>

    <body>
        <!-- Include the Navbar -->
        <%- include('navbar', { activePage: 'login' }) %>
            <!-- Log In Section -->
            <section class="form-section mt-5">
                <div class="container">
                    <h2>Existing User Log In</h2>
                    <form id="loginForm" action="/login" method="POST" onsubmit="return validateLoginForm(event)">
                        <div class="mb-3">
                            <input type="email" id="loginEmail" name="email" class="form-control"
                                placeholder="Email Address" required>
                            <p id="emailMsg" class="msg"></p>
                        </div>
                        <div class="mb-3">
                            <input type="password" id="loginPassword" name="password" class="form-control"
                                placeholder="Password" required>
                            <p id="passwordMsg" class="msg"></p>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Log In</button>
                    </form>

                    <div class="mt-3 text-center">
                        <a href="/forgot_password">Forgot Password?</a> | <a href="/register">Sign Up</a>
                    </div>
                </div>
            </section>
            <!-- Include the Footer -->
            <%- include('footer') %>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
                <script src="login.js"></script>
    </body>